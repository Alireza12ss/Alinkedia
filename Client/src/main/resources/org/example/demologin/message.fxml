<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefWidth="360.0" spacing="10.0" stylesheets="@../../../cssFiles/messageStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="messageImage" fitHeight="360.0" fitWidth="360.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../pictures/tic-tac-toe-seamless-background-on-dark-blue-illustration-vector.jpg" />
            </image>
        </ImageView>
        <TextArea fx:id="messageText" editable="false" wrapText="true">
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin>
        </TextArea>
        <Label fx:id="date" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="Time">
            <VBox.margin>
                <Insets right="10.0" />
            </VBox.margin>
        </Label>
    </children>
</VBox>
